# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
VITE_APP_NAME=QuorumLuxe
VITE_APP_VERSION=1.0.0

# ==============================================
# SUPABASE (BACKEND)
# ==============================================
# Obtén estas credenciales en: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu-anon-key-aqui

# ==============================================
# AUTENTICACIÓN
# ==============================================
VITE_JWT_SECRET=tu-secret-key-para-jwt
VITE_JWT_EXPIRES_IN=7d

# ==============================================
# PASARELAS DE PAGO
# ==============================================

# PayPal
VITE_PAYPAL_CLIENT_ID=tu-paypal-client-id
VITE_PAYPAL_CLIENT_SECRET=tu-paypal-client-secret

# MercadoPago
VITE_MERCADOPAGO_ACCESS_TOKEN=tu-mercadopago-access-token
VITE_MERCADOPAGO_PUBLIC_KEY=tu-mercadopago-public-key

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=tu-stripe-publishable-key
VITE_STRIPE_SECRET_KEY=tu-stripe-secret-key

# ==============================================
# CONFIGURACIÓN DE SORTEOS Y PRECIOS
# ==============================================
VITE_SORTEO_DURACION_HORAS=720
VITE_PRECIO_NUMERO=2000
VITE_MONEDA=CLP

# ==============================================
# API (Opcional si usas API adicional)
# ==============================================
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# ==============================================
# NOTAS IMPORTANTES:
# ==============================================
# 1. Copia este archivo como .env en la raíz del proyecto
# 2. Rellena las variables con tus credenciales reales
# 3. NUNCA subas el archivo .env a git (ya está en .gitignore)
# 4. Las variables VITE_* son expuestas al cliente, no incluyas secretos sensibles
